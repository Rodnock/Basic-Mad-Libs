public class MadLibs1
{
   public static void main(String[] args)
   {
     // fill these in with silly words/strings (don't read the poem yet)
     String noun1 = "";
     String adjective1 = "";
     String color = "";
     String noun2 = "";
     String adjective2 = "";


     // Run to see the silly story!
     System.out.println("Sometimes I feel like a " + noun1);
     System.out.println("But people make me feel " + adjective1);
     System.out.println(color + " always reminds me of a " + noun2);
     System.out.println("I bet that I can make you feel " + adjective2 + " too");
   }
}
